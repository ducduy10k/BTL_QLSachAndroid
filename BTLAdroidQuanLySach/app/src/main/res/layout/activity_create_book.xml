<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateBookActivity">

    <EditText
        android:id="@+id/editprice"
        android:layout_width="231dp"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_input"
        android:ems="10"
        android:hint="Enter Price"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editPassword" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="103dp"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:text="Price"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editPublingshing"
        android:layout_width="238dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_input"
        android:ems="10"
        android:hint="Enter Publishing company"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="124dp"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:text="Publishing company"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/editBookTitile"
        android:layout_width="232dp"
        android:layout_height="52dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/edit_text_input"
        android:drawableTop="@drawable/edit_text_input"
        android:ems="10"
        android:hint="Enter Book Title"
        android:inputType="textPersonName"
        android:textColorHighlight="#FFFFFF"
        android:textCursorDrawable="@drawable/edit_text_input"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editUsername" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="98dp"
        android:layout_height="28dp"
        android:layout_marginTop="44dp"
        android:text="Book Title"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editIdBook"
        android:layout_width="227dp"
        android:layout_height="52dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edit_text_input"
        android:ems="10"
        android:focusable="auto"
        android:hint="Enter ID Book"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="ID Book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imgViewBook"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/image100" />

    <ImageButton
        android:id="@+id/ibtnCamera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/imgViewBook"
        app:layout_constraintTop_toTopOf="@+id/imgViewBook"
        app:srcCompat="@drawable/camera100" />

    <ImageButton
        android:id="@+id/ibtnForder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/ibtnCamera"
        app:layout_constraintTop_toBottomOf="@+id/ibtnCamera"
        app:srcCompat="@drawable/folder100" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="146dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Book"
        android:textColor="#E421DF37"
        android:textColorHighlight="#3688CA"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateBook"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_button"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="@+id/imgViewBook"
        app:layout_constraintTop_toBottomOf="@+id/imgViewBook"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="Author"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editAuthor"
        android:layout_width="234dp"
        android:layout_height="53dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edit_text_input"
        android:ems="10"
        android:hint="Enter The Writer's Name"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>